<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="140" Width="525" Background="#FF341D0D" Foreground="#FF892828">
    <StackPanel>
        <Label Margin="5">Введите имя в чате:</Label>
        <TextBox Name="tbName" Margin="5" TabIndex="5000"></TextBox>
        <Button Margin="5 10"
                HorizontalAlignment="Left" Padding="20 7" Click="Button_Click" TabIndex="10000">Начать чат</Button>
    </StackPanel>
</Window>
